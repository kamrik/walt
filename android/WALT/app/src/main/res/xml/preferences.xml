<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Common">

        <CheckBoxPreference
            android:key="pref_verbose_log"
            android:title="Verbose logging"
            android:summary="(not implemented)" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Audio output">

        <EditTextPreference
            android:key="pref_audio_out_reps"
            android:title="Audio out reps"
            android:inputType="numberDecimal"
            android:summary="(not implemented)"
            android:dialogTitle="Number of reps for audio out latency" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen response">

        <EditTextPreference
            android:key="pref_screen_reps"
            android:title="Screen blink reps"
            android:inputType="phone"
            android:defaultValue="22"
            android:summary="Number of reps for screen latency"
            android:dialogTitle="Number of reps for screen latency measurement" />

    </PreferenceCategory>

</PreferenceScreen>